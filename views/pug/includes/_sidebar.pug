.app-sidebar__overlay(data-toggle="sidebar")
aside.app-sidebar

	.app-sidebar__user
		img.app-sidebar__user-avatar(src='images/user.jpeg', alt='User Image')
		div
			p.app-sidebar__user-name Utku Erkal
			p.app-sidebar__user-designation Developer

	ul.app-menu
		li
			a.app-menu__item(href='/dashboard' class={'active': activePage == 'dashboard'})
				i.app-menu__icon.fa.fa-dashboard
				span.app-menu__label Dashboard
		li
			a.app-menu__item(href='/sitemaps' class={'active': activePage == 'sitemaps'})
				i.app-menu__icon.fa.fa-list
				span.app-menu__label Sitemap
		li
			a.app-menu__item(href='/omnitures' class={'active': activePage == 'omnitures'})
				i.app-menu__icon.fa.fa-line-chart
				span.app-menu__label Omniture
		li
			a.app-menu__item(href='/parameters' class={'active': activePage == 'parameters'})
				i.app-menu__icon.fa.fa-gear
				span.app-menu__label Parameters
